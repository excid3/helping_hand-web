<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h2 class="page-header text-center">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <% if resource.errors.any? %>
          <div class="alert alert-danger">
            <% resource.errors.full_messages.each do |msg| %>
              <div><%= msg %></div>
            <% end %>
          </div>
        <% end %>

        <div class="form-group">
          <%#= f.label :first_name %>
          <%= f.text_field :name, required: true, autofocus: true, placeholder: "Full Name", class: "form-control" %>
        </div>

        <div class="form-group">
          <%#= f.label :email %>
          <%= f.email_field :email, required: true, placeholder: "Email Address", class: "form-control" %>
        </div>

        <div class="form-group">
          <%#= f.label :password %>
          <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Register", class: "btn btn-success btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
